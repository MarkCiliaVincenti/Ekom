<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net472</TargetFramework>
        <AssemblyName>Ekom.Web</AssemblyName>
        <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>

        <!-- Package properties -->
        <PackageId>Ekom.Web.v8</PackageId>
        <Version>0.4.1</Version>
        <Title>Ekom.Web.v8</Title>
        <Authors>Vettvangur</Authors>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://github.com/Vettvangur/Ekom</PackageProjectUrl>
        <PackageIcon>images\VV_Logo.png</PackageIcon>
        <Description>Update Cache editor</Description>
        <PackageReleaseNotes>Updated for submodule usage</PackageReleaseNotes>
        <Copyright>Copyright 2019</Copyright>
        <PackageTags></PackageTags>

        <!-- Optional: Publish the repository URL in the built .nupkg (in the NuSpec <Repository> element) -->
        <PublishRepositoryUrl>true</PublishRepositoryUrl>

        <!-- Optional: Embed source files that are not tracked by the source control manager in the PDB -->
        <EmbedUntrackedSources>true</EmbedUntrackedSources>

        <!-- Optional: Build symbol package (.snupkg) to distribute the PDB containing Source Link -->
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>

        <!-- Enable NuGet package caching -->
        <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
      <DefineConstants>DEBUG;TRACE</DefineConstants>
      <DocumentationFile>bin\Debug\Ekom.Web.xml</DocumentationFile>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
      <DocumentationFile>bin\Release\Ekom.Web.xml</DocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <!-- Package icon -->
        <None Include="..\VV_Logo.png" Pack="true" PackagePath="images\" />
    </ItemGroup>
    <ItemGroup>
        <Content Include="App_Plugins\Ekom\DataTypes\CountryPicker\ekmCountry.controller.js" />
        <Content Include="App_Plugins\Ekom\DataTypes\CountryPicker\ekmCountry.html" />
        <Content Include="App_Plugins\Ekom\DataTypes\CouponEditor\ekomCoupon.controller.js" />
        <Content Include="App_Plugins\Ekom\DataTypes\CouponEditor\ekomCoupon.html" />
        <Content Include="App_Plugins\Ekom\DataTypes\CurrencyPicker\ekmCurrency.controller.js" />
        <Content Include="App_Plugins\Ekom\DataTypes\CurrencyPicker\ekmCurrency.html" />
        <Content Include="App_Plugins\Ekom\DataTypes\PriceEditor\ekmPrice.controller.js" />
        <Content Include="App_Plugins\Ekom\DataTypes\PriceEditor\ekmPrice.html" />
        <Content Include="App_Plugins\Ekom\DataTypes\RangeEditor\ekmRange.controller.js" />
        <Content Include="App_Plugins\Ekom\DataTypes\RangeEditor\ekmRange.html" />
        <Content Include="App_Plugins\Ekom\DataTypes\StockEditor\ekomStock.controller.js" />
        <Content Include="App_Plugins\Ekom\DataTypes\StockEditor\ekomStock.html" />
        <Content Include="App_Plugins\Ekom\DataTypes\ZonePicker\ekmZone.controller.js" />
        <Content Include="App_Plugins\Ekom\DataTypes\ZonePicker\ekmZone.html" />
        <Content Include="Views\web.config.transform" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="App_Plugins\Ekom\DataTypes\CountryPicker\ekmCountry.controller.js" />
      <None Remove="App_Plugins\Ekom\DataTypes\CountryPicker\ekmCountry.html" />
      <None Remove="App_Plugins\Ekom\DataTypes\CouponEditor\ekomCoupon.controller.js" />
      <None Remove="App_Plugins\Ekom\DataTypes\CouponEditor\ekomCoupon.html" />
      <None Remove="App_Plugins\Ekom\DataTypes\CurrencyPicker\ekmCurrency.controller.js" />
      <None Remove="App_Plugins\Ekom\DataTypes\CurrencyPicker\ekmCurrency.html" />
      <None Remove="App_Plugins\Ekom\DataTypes\PriceEditor\ekmPrice.controller.js" />
      <None Remove="App_Plugins\Ekom\DataTypes\PriceEditor\ekmPrice.html" />
      <None Remove="App_Plugins\Ekom\DataTypes\RangeEditor\ekmRange.controller.js" />
      <None Remove="App_Plugins\Ekom\DataTypes\RangeEditor\ekmRange.html" />
      <None Remove="App_Plugins\Ekom\DataTypes\StockEditor\ekomStock.controller.js" />
      <None Remove="App_Plugins\Ekom\DataTypes\StockEditor\ekomStock.html" />
      <None Remove="App_Plugins\Ekom\DataTypes\ZonePicker\ekmZone.controller.js" />
      <None Remove="App_Plugins\Ekom\DataTypes\ZonePicker\ekmZone.html" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
        <PackageReference Include="GMO.Vorto.Web.v8" Version="[0.2.0,1.0)" />
    </ItemGroup>
</Project>
