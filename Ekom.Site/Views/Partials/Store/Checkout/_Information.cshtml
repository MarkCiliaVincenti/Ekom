@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
    var order = (Ekom.Models.OrderInfo)ViewData["order"];

    if (order != null)
    {

        using (Html.BeginUmbracoForm("UpdateCustomerInformation", "EkomOrder", null, new { @Class = "cart__quantity-form" }))
        {
            <h1 class="checkout__caption">Customer Details</h1>

            <input type="hidden" name="storeAlias" value="@order.StoreInfo.Alias" />

            <div>
                <label for="customerName">Name</label>
                <input type="text" name="customerName" id="customerName" />
            </div>

            <div>
                <label for="customerEmail">Email</label>
                <input type="email" name="customerEmail" id="customerEmail" />
            </div>

            <div>
                <label for="customerCountry">Country</label>
                <input type="text" name="customerCountry" id="customerCountry" />
            </div>

            <div>
                <label for="customerCity">City</label>
                <input type="text" name="customerCity" id="customerCity" />
            </div>

            <div>
                <label for="customerAddress">Address</label>
                <input type="text" name="customerAddress" id="customerAddress" />
            </div>

            <div>
                <label for="customerZipCode">ZipCode</label>
                <input type="text" name="customerZipCode" id="customerZipCode" />
            </div>

            <div>
                <label for="customerPhone">Phone</label>
                <input type="text" name="customerPhone" id="customerPhone" />
            </div>

            <div>
                <label for="customerComment">Comment</label>
                <textarea name="customerComment" id="customerComment" ></textarea>
            </div>

            <h1 class="checkout__caption">Shipping Details</h1>

            <div>
                <label for="shippingName">Name</label>
                <input type="text" name="shippingName" id="shippingName" />
            </div>

            <div>
                <label for="shippingCountry">Country</label>
                <input type="text" name="shippingCountry" id="shippingCountry" />
            </div>

            <div>
                <label for="shippingCity">City</label>
                <input type="text" name="shippingCity" id="shippingCity" />
            </div>

            <div>
                <label for="shippingAddress">Address</label>
                <input type="text" name="shippingAddress" id="shippingAddress" />
            </div>

            <div>
                <label for="shippingZipCode">ZipCode</label>
                <input type="text" name="shippingZipCode" id="shippingZipCode" />
            </div>

            <div>
                <button type="submit" class="button">Update</button>
            </div>
        }

    }
}
