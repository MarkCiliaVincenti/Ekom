@inherits Umbraco.Web.Mvc.UmbracoTemplatePage

@{
    var product = (Ekom.Models.Product)ViewData["product"];
    var gridSize = (string)ViewData["size"];

    if (product != null)
    {
        var primaryVariantGroup = product.PrimaryVariantGroup;
        var primaryImage = primaryVariantGroup != null && primaryVariantGroup.Images.Any() ? primaryVariantGroup.Images.FirstOrDefault().Url : "/content/img/product.jpg";

        <div class="cell @gridSize">

            <div class="productItem">

                <a href="@product.Url" class="productItem__image">
                    <img src="@primaryImage?width=370&height=500&mode=crop" alt="@product.Title"/>
                </a>

                <a href="@product.Url" class="productItem__caption">
                    <strong>@product.Title</strong>
                </a>

                <p class="productItem__price">@product.Price.WithVat.ToCurrencyString</p>

            </div>
        </div>
    }
}

