@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using uWebshop.API;

@{
    Layout = "Masterpage.cshtml";

    var products = Catalog.GetAllProducts();
    var currentStore = Store.GetStore();

    var cart = Cart.GetCart(currentStore.Alias);

}

@section Main {

    <div class="row column text-center">
        <h2>
            Our Newest Products - Store : @currentStore.Alias - Product: @products.Count() - Domain:
            @(UmbracoContext.PublishedContentRequest.UmbracoDomain != null ? UmbracoContext.PublishedContentRequest.UmbracoDomain.DomainName : "null")
            
            <h4>Store</h4>
            <br />
            Culture :@currentStore.Culture.Name
            <br />
            Vat: @currentStore.Vat
            <br />
            Include Vat In Price: @currentStore.VatIncludedInPrice
            <br />

            <h4>Cart</h4>

            Cart: @(cart != null ? "Cart Found" : "Cart Empty")

            @if (cart != null)
            {
                <div>ReferenceId: @cart.ReferenceId</div>
                <div>OrderNumber: @cart.OrderNumber</div>
                <div>Store: @cart.StoreInfo.Alias</div>
                <div>Quantity: @cart.Quantity</div>
                <div>Total: @cart.ChargedAmount.ToCurrencyString()</div>

                if (cart.OrderLines.Any())
                {
                    <ul>
                        @foreach (var line in cart.OrderLines)
                        {
                            <li><a href="#" data-store="@cart.StoreInfo.Alias" data-lineId="@line.Id" class="cart-remove-line">Remove</a> @line.Id - @line.Quantity - @(line.Product != null ? line.Product.Title : "") - @(line.Product != null ? line.Product.SKU : "")
    

                                @if (line.Product.VariantGroups.Any())
                                {
                                    foreach (var group in line.Product.VariantGroups)
                                    {
                                        <h4>@group.Title - @group.Id</h4>

                                        <ul>
                                            @foreach (var variant in group.Variants)
                                            {
                                                <li>@variant.Id - @variant.Title</li>
                                            }
                                        </ul>
                                    }

                                }
                            </li>
                        }
                    </ul>
                }
            }

        </h2><hr></div><div class="row small-up-2 large-up-4">

        @foreach (var product in products)
        {
            <div class="column">
                <img class="thumbnail" src="http://placehold.it/300x400">
                <h5>@product.Title</h5>

                <p>Price With Vat : @product.Price.WithVat.Value</p>
                <p>Price WithOut Vat : @product.Price.WithoutVat.Value</p>
                <p>Price Original : @product.OriginalPrice</p>

                <a href="@product.Url" class="button expanded">View</a>

                <form method="post" action="~/Umbraco/surface/cart/addtoCart" class="add-to-cart">
                    <input type="hidden" name="productId" value="@product.Key" />
                    <input type="hidden" name="storeAlias" value="@currentStore.Alias" />
                    <input type="hidden" name="action" value="@uWebshop.Helpers.CartAction.Update" />

                    @if (product.VariantGroups.Any())
                    {
                        foreach (var group in product.VariantGroups.Where(x => x.Variants.Any()))
                        {
                            <h5>@group.Title</h5>

                            <select name="variantId">
                                @foreach (var variant in group.Variants)
                                {
                                    <option value="@variant.Key">@variant.Title</option>
                                }
                            </select>

                        }

                    }
                    <input type="number" name="quantity" value="1" />

                    <button type="submit" class="button expanded">Add to cart</button>
                </form>

            </div>
        }

