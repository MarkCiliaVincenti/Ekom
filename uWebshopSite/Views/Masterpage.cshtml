    <!-- Start Top Bar -->
    <div class="top-bar">
      <div class="top-bar-left">
        <ul class="menu">
          <li class="menu-text">Marketing Site</li>
            @foreach (var category in categories)
            {
                <li>
                    <a href="@category.Url">@category.Title</a>
                </li>
            }
        </ul>
      </div>
    </div>


	@RenderSection("Main", required: false)

