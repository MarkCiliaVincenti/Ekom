{
  "compilerOptions": {
      "module": "commonjs",
      "jsx": "react",
      "experimentalDecorators": true,
      "allowJs": true,
      "target": "es5",
      "lib": [
          "es7",
          "dom"
      ],
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "forceConsistentCasingInFileNames": false,
      "noUnusedLocals": true,
      "paths": {
            "components/*": [
                "./src/components/*"
            ],
            "containers/*": [
                "./src/containers/*"
            ],
            "utilites/*": [
                "./src/utilites/*"
            ],
            "stores/*": [
                "./src/stores/*"
            ],
            "data/*": [
                "./src/data/*"
            ],
            "models/*": [
                "./src/models/*"
            ],
            "pages/*": [
                "./src/pages/*"
            ],
            "utilities/*": [
                "./src/utilities/*"
            ],
            "gUtilities/*": [
                "./src/gUtilities/*"
            ],
            "reusableComponents/*": [
                "./src/reusableComponents/*"
            ],
            "assets/*": [
                "./assets/*"
            ],
      }
  },
  "exclude": [
      "bower_components",
      "node_modules"
  ]
}